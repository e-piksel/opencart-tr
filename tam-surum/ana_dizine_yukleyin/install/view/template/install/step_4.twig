{{ header }}
<div id="content">
	<div class="page-header">
		<div class="container">
			<h1>{{ heading_title }}</h1>
		</div>
	</div>
	<div class="container">
		<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }} <button type="button" class="close" data-bs-dismiss="alert"></button></div>
		<div class="card">
			<div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_step_4 }}</div>
			<div class="card-body p-4">
				<div class="row mb-4">          
					<div class="col-6 text-center">
						<a href="../"><img src="view/image/catalog.jpg" alt="OpenCart" title="OpenCart" class="img-thumbnail"/></a>
						<br/>
						<a href="../" class="btn btn-outline-secondary mt-3">{{ text_catalog }}</a>
					</div>
					<div class="col-6 text-center">
						<a href="../admin/" class="mb-3"><img src="view/image/admin.jpg" alt="OpenCart" title="OpenCart" class="img-thumbnail"/></a>
						<br/>
						<a href="../admin/" class="btn btn-outline-secondary mt-3">{{ text_admin }}</a>
					</div>
				</div>
				<div class="mb-4">{{ promotion }}</div>
				<div class="m-4 text-center"><a href="https://openix.io/tr/yazilimlar?tracking=opencart_install&utm_source=opencart_install&utm_medium=software_link&utm_campaign=opencart_install" target="_BLANK" class="btn btn-primary">{{ text_extension }}</a></div>
				<fieldset class="mb-5">
					<legend><i class="fas fa-envelope-o"></i> {{ text_mail }}</legend>
					<div class="text-center">
						<p class="pb-2">{{ text_mail_description }}</p>
						<a href="https://openix.io/tr/bultene-abone-ol?tracking=opencart_install&utm_source=opencart_install&utm_medium=newsletter_link&utm_campaign=opencart_install" target="_BLANK" class="btn btn-secondary">{{ button_mail }}</a>
					</div>
				</fieldset>
				<div class="row mb-4">
					<div class="col-4 text-center">
						<h3><i class="fab fa-facebook"></i> {{ text_facebook }}</h3>
						<p>{{ text_facebook_description }}</p>
						<a href="https://www.facebook.com/epiksel" target="_blank">{{ text_facebook_visit }}</a>
					</div>
					<div class="col-4 text-center">
						<h3><i class="fas fa-comments"></i> {{ text_forum }}</h3>
						<p>{{ text_forum_description }}</p>
						<a href="https://forum.opencart.com/?utm_source=opencart_install&utm_medium=forum_link&utm_campaign=opencart_install" target="_blank">{{ text_forum_visit }}</a>
					</div>
					<div class="col-4 text-center">
						<h3><i class="fas fa-user"></i> {{ text_commercial }}</h3>
						<p>{{ text_commercial_description }}</p>
						<a href="https://openix.io/tr/opencart-servis?tracking=opencart_install&utm_source=opencart_install&utm_medium=service_link&utm_campaign=opencart_install" target="_BLANK">{{ text_commercial_visit }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{ footer }}
